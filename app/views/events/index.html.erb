<head>
  <title>Newism 貨物管理系統</title>
</head>

<body>
	<nav class="navbar navbar-default">
	  	<div class="container-fluid">
		    <div class="navbar-header">
		      	<%= link_to 'Newism 貨物管理系統', root_path ,class:"navbar-brand" %>
		    </div>
		    <ul class="nav navbar-nav">
		      	<li class="active"><%= link_to 'Home', root_path%></li>
		      	<li><%= link_to '進貨', root_path %></li>
		      	<li><%= link_to '銷貨', root_path %></li>
		      	<li><%= link_to '退貨', root_path %></li>
		    </ul>
	<!--test region start-->

			<ul class="nav navbar-nav navbar-right">

			    <li><%= link_to 'Hello! '+current_user.user_name, root_path, class:"glyphicon glyphicon-user" %></li>
			    <li><%= link_to '登出', destroy_user_session_path, :method => :delete ,class:"glyphicon glyphicon-log-out" %></li>
			</ul>

	<!--test region end-->
	  	</div>
	</nav>

	<div class="container">
		<h2>目前各店庫存</h2>
				<% @store.each do |store| %>
				<table class="table">
					<thead>
				      	<tr>
				        	<th><%= store.title %></th>				  
				     	</tr>
			     	</thead>
			     	<tbody>

			     			<table class="table">
							    <thead>
							     	<tr>
							        <th>品名</th>
							        <th>數量</th>
							      	</tr>
							    </thead>
							    <tbody>
							    	<%for x in 1..store.products.count%>
									    <tr>
				        					<td><%= store.products.find(x).name %></td>
											<%ps=ProductsStore.where("store_id=? AND product_id=?",store.id,store.products.find(x).id).first%>
				        					<td><%= ps.amount%></td>
									    </tr>
									<% end %>
								</tbody>
							</table>
			     	</tbody>
			     </table>

			    <% end %>
	</div>
</body>

