<head>
  <title>Newism 貨物管理系統</title>
</head>

<body>
	<%= render "events/shared/navbar" %>

	<div class="container">
		<h2>目前各店庫存</h2>
				<% @store.each do |store| %>
				<table class="table">
					<thead>
				      	<tr>
				        	<th><%= store.title %></th>				  
				     	</tr>
			     	</thead>
			     	<tbody>

			     		<table class="table">
							<thead>
							    <tr>
							    <th>品名</th>
							    <th>數量</th>
							    </tr>
							</thead>
							<tbody>
							    <%for x in 1..store.products.count%>
									<tr>
				        				<td><%= store.products.find(x).name %></td>
										<%ps=ProductsStore.where("store_id=? AND product_id=?",store.id,store.products.find(x).id).first%>
				        				<td><%= ps.amount%></td>
									</tr>
								<% end %>
							</tbody>
						</table>
			     	</tbody>
			     </table>

			    <% end %>
	</div>
</body>

<%= render "events/shared/footer" %>